#!/bin/bash

case $1 in
	"work")
	echo "Loading work profile"
	git config --global user.name "Wil Taylor"
	git config --global user.email "wil.taylor@vygoapp.com"
	git config --global core.sshCommand "ssh -i ~/.ssh/id_rsa_vygo"
	git config --global commit.gpgsign false
	ln -sf /usr/bin/vivaldi-stable ~/.local/bin/browser 
	;;
	"home")
	echo "Loading home profile"
	git config --global user.name "Wil Taylor"
	git config --global user.email "cert@wiltaylor.dev"
	sed '/^sshCommand/d' ~/.config/git/config
	git config --global commit.gpgsign true
	gpg-connect-agent /bye
	ln -sf /usr/bin/firefox ~/.local/bin/browser 
	;;
esac
