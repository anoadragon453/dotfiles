#/bin/env zsh

encrypt-dot(){
	pushd ~/.dotfiles/.data
	tar czf data.tar.gz ~/.secrets
	gpg -er cert@wiltaylor.dev data.tar.gz
	rm data.tar.gz
	popd
}

decrypt-dot(){
	pushd ~/.dotfiles/.data
	gpg -do data.tar.gz data.tar.gz.gpg
	tar xvf ~/.dotfiles/.data/data.tar.gz -C /
	rm ~/.dotfiles/.data/data.tar.gz
	popd
}
